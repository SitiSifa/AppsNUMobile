<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.NU.numobile.activity.amaliyah.MenuAmaliyah"
    tools:showIn="@layout/activity_menu_amaliyah">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@drawable/header_amaliyah"
            android:scaleType="fitXY"
            />

        <Button
            android:layout_width="164dp"
            android:layout_height="190dp"
            android:background="@drawable/amlyh_doa"
            android:layout_marginLeft="25dp"
            android:id="@+id/btn_online"
            android:layout_marginTop="150dp"
            />

        <Button
            android:layout_width="164dp"
            android:layout_height="190dp"
            android:background="@drawable/amlyh_waktu"
            android:layout_marginLeft="200dp"
            android:id="@+id/btn_medical"
            android:layout_marginTop="150dp"
            />

        <Button
            android:layout_width="164dp"
            android:layout_height="190dp"
            android:background="@drawable/amlyh_kalender"
            android:layout_marginLeft="25dp"
            android:id="@+id/btn_dokterlist"
            android:layout_marginTop="350dp"
            />

        <Button
            android:layout_width="164dp"
            android:layout_height="190dp"
            android:background="@drawable/amlyh_jam"
            android:layout_marginLeft="200dp"
            android:id="@+id/btn_rs"
            android:layout_marginTop="350dp"
            />

        <Button
            android:layout_width="164dp"
            android:layout_height="190dp"
            android:background="@drawable/amlyh_kiblat"
            android:layout_marginLeft="25dp"
            android:id="@+id/btn_klinik"
            android:layout_marginTop="550dp"
            />

        <Button
            android:layout_width="164dp"
            android:layout_height="190dp"
            android:background="@drawable/amlyh_hajiumrah"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="550dp"
            />

    </RelativeLayout>

</ScrollView>
